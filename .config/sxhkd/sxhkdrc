# store PRIMARY selection to CLIPBOARD
#
super + alt + space
  xsel -p | xsel -b

 close/kill window
# super + {_,ctrl} + c
#   xdo {close,kill}

# dwm alt
super + ctrl + c
  xdo kill

# start a terminal
super + ctrl + { Return, m }
  xkb-switch -s us; $TERMINAL

# start a terminal w/ tmux
super + { Return, m }
  xkb-switch -s us; $TERMINAL -e bash -c "tmux attach || tmux"

ctrl + button12
  boomer -f

# dmenu tmux
super + a
  dmux

# switch layout
super + space
  xkb-switch -n

