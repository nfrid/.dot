# fedit configs
super + g
  xkb-switch -s us; $TERM -e dotbare fedit

# calculator
super + equal
  useus rofi -show calc -modi calc -no-show-match -no-sort

# note manager (alt to NOTES)
super +{_, alt +} slash
  xkb-switch -s us; note{_, NOTES}

super + shift + slash
  dmenu -p tuxi | tuxi -r | xargs -I% notify-send -i search %

super + t
  dmenu_timer

# taskwarrior tui
super + ctrl + slash
  xkb-switch -s us; $TERM -e taskwarrior-tui

# taskell
# super + t
#   tmenu

# unicode symbols picker
super + apostrophe
  unipicker --command "dmenu -l 5 -p unicode" --copy-command "xclip -sel clip"

# emoji picker
super + semicolon
  cat $HOME/.local/share/emoji-data.txt | dmenu -F -p emoji -l 5 | cut -d " " -f1 | tr -d $'\n' | xclip -sel clip

# rofi emoji picker
super + shift + semicolon
  splatmoji copy

# password manager
super + shift + p
  useus rofi-pass
  # useus pass-rofi --no-notify

# passmenu
super + p
  passmenu

# brightness control
XF86MonBrightness{Up,Down}
  xbacklight {+,-} 10

# volume control
XF86Audio{Raise,Lower}Volume
  pamixer -{i,d} 5

# volume toggle mute
XF86AudioMute
  pamixer -t

# player control
XF86Audio{Next,Prev,Play}
  playerctl -p playerctld {next,previous,play-pause}

# stop all players
XF86AudioStop
  playerctl --all-players stop

