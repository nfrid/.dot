#!/bin/bash

cmds=(
  # "btmirecon"
  # "btmidis"
  # "btamrecon"
  # "btamdis"
  "btjblrecon"
  "btjbldis"
  "austream"
)

ch=$(printf '%s\n' "${cmds[@]}" | dmenu -p "cmd")

case $ch in
  btmirecon) bt mi r ;;
  btmidis) bt mi d ;;
  btamrecon) bt am r ;;
  btamdis) bt am d ;;
  btjblrecon) bt jbl r ;;
  btjbldis) bt jbl d ;;
  austream)
    [[ $(austream status) == "off" ]] &&
    austream on ||
    austream off
    notify-send "audio streaming is $(austream status)"
    ;;
  "") exit 0 ;;
  *) notify-send "unknown dcmd: $ch"; exit 1 ;;
esac
