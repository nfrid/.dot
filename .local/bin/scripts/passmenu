#!/bin/bash

shopt -s nullglob globstar

prefix=${PASSWORD_STORE_DIR-~/.password-store}
password_files=("$prefix"/**/*.gpg)
password_files=("${password_files[@]#"$prefix"/}")
password_files=("${password_files[@]%.gpg}")

choice=$(printf '%s\n' "${password_files[@]}" | dmenu "$@")

[[ -n $choice ]] || exit

if [[ $choice =~ ^otp/ ]]; then
  pwfile=$(pass otp show "$choice")
else
  pwfile=$(pass show "$choice")
fi

password=$(printf "%s" "$pwfile" | sed -n 1p)
username=$(printf "%s" "$pwfile" | grep -Po "^[Uu]ser(name)?: \K(.*)")

if [[ -z $username ]]; then
  printf '%s' "$password" | xclip -sel clipboard
  exit
fi

printf '%s' "$username" | xclip -sel clipboard
printf '%s' "$password" | xclip
